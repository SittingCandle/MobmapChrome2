{
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },

  "icons": {
    "128": "icons/dmy-icon-128.png"
  },

  "name": "Mobmap2",
  "version": "1.9.0",
  "description": "Mobmap Javascript Client",
  "permissions": [
     "clipboardWrite", {"fileSystem": ["write"]} ,"storage", "http://*/*.csv","https://*/*.csv"
  ],

  "sandbox": {
    "pages": [
      "inner/index.html"
    ],
    "content_security_policy": "sandbox allow-scripts; script-src 'self' 'unsafe-eval' https://*.google.com https://*.gstatic.com https://*.googleapis.com; object-src"
  }
}